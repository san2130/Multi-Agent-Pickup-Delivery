<launch>
  <arg name="launch_prefix" default="" /> <!-- set to value="gdbserver localhost:10000" for remote debugging -->
  <arg name="ind_id" default="" />
  <arg name="cam_id" default="1"/>
  <arg name="node_namespace" default="apriltag_ros_continuous_node_usbcam$(arg cam_id)" />
  <arg name="width" default="640"/>
  <arg name="height" default="480"/>
  <arg name="image_topic" default="image_raw" />
  <arg name="output" default="true"/>
  <arg name="device_num" value="$(arg ind_id)" unless="$(eval arg('ind_id')=='')"/>
  <arg name="device_num" value="0" if="$(eval arg('ind_id')=='')"/>
  <arg name="camera_name" default="usb_cam$(arg cam_id)" unless="$(eval arg('ind_id')=='')" />
  <arg name="camera_name" default="usb_cam0" if="$(eval arg('ind_id')=='')" />
  <arg name="camera_frame" default="$(arg camera_name)_link" />
  
  <rosparam command="load" file="$(find apriltag_ros)/config/settings.yaml" ns="$(arg node_namespace)" />
  <rosparam command="load" file="$(find apriltag_ros)/config/tags.yaml" ns="$(arg node_namespace)" />
    
  
  <node name="$(arg camera_name)" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/v4l/by-id$(arg ind_id)" />
    <param name="image_width" value="$(arg width)" />
    <param name="image_height" value="$(arg height)" />
    <param name="pixel_format" value="mjpeg" />
    <param name="camera_frame_id" value="usb_cam$(arg cam_id)" />
    <param name="camera_name" value="usb_cam$(arg cam_id)" />
    <param name="camera_info_url" value="package://apriltag_ros/info/$(arg camera_name).yaml"/>
    <param name="io_method" value="mmap"/>
  </node> 
  <group if="$(arg output)">
    <node name="image_view$(arg camera_name)" pkg="image_view" type="image_view" respawn="false" output="screen">
      <remap from="image" to="/usb_cam$(arg cam_id)/image_raw"/>
      <param name="autosize" value="true" />
    </node>
  </group>
  <!-- Set parameters -->
  <rosparam command="load" file="$(find apriltag_ros)/config/settings.yaml" ns="$(arg node_namespace)" />
  <rosparam command="load" file="$(find apriltag_ros)/config/tags.yaml" ns="$(arg node_namespace)" />
  
  <node pkg="apriltag_ros" type="apriltag_ros_continuous_node" name="$(arg node_namespace)" clear_params="true" output="screen" launch-prefix="$(arg launch_prefix)" >

    <remap from="image_rect" to="$(arg camera_name)/$(arg image_topic)" />
    <remap from="camera_info" to="$(arg camera_name)/camera_info"/>
    <remap from="tag_detections_image" to="$(arg camera_name)/tag_detections_image"/>
    <remap from="tag_detections_image/compressed" to="$(arg camera_name)/tag_detections_image/compressed"/>
<!--    <arg name="tf_prefix" value="camx" />-->
    <param name="camera_frame" type="str" value="$(arg camera_frame)" />
    <param name="publish_tag_detections_image" type="bool" value="true" />  
    <!-- <param name="publish_tf" type="bool" value="false"/>     -->
  </node>
</launch>
